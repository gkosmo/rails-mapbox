<p id="notice"><%= notice %></p>

<h1>Mushrooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mushrooms.each do |mushroom| %>
      <tr>
        <td><%= mushroom.name %></td>
        <td><%= mushroom.address %></td>
        <td><%= link_to 'Show', mushroom %></td>
        <td><%= link_to 'Edit', edit_mushroom_path(mushroom) %></td>
        <td><%= link_to 'Destroy', mushroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mushroom', new_mushroom_path %>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"

  data-myName="hey my name"
></div>

